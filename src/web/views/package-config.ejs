<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Configure <%= package.name %> - RiikonBot</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/navbar', { user: user }) %>
  
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1 class="mb-0"><%= package.name %> Configuration</h1>
        <p class="text-muted">Version <%= package.version %></p>
      </div>
      <span class="badge <%= package.enabled ? 'bg-success' : 'bg-secondary' %> fs-6">
        <%= package.enabled ? 'Enabled' : 'Disabled' %>
      </span>
    </div>
    
    <div class="row">
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Edit Configuration</h5>
          </div>
          <div class="card-body">
            <form id="configForm">
              <div id="configEditor" class="mb-3">
                <label for="configJson" class="form-label">Configuration JSON</label>
                <textarea id="configJson" class="form-control font-monospace" rows="10"><%= JSON.stringify(package.config, null, 2) %></textarea>
                <div class="invalid-feedback">
                  Please enter valid JSON.
                </div>
              </div>
              
              <div class="d-flex justify-content-between">
                <a href="/dashboard/packages/<%= package.name %>" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Save Configuration</button>
              </div>
            </form>
          </div>
        </div>
      </div>
      
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0">Configuration Help</h5>
          </div>
          <div class="card-body">
            <p>Edit the configuration JSON for the <strong><%= package.name %></strong> package.</p>
            <p>The configuration must be valid JSON format. Changes will take effect immediately.</p>
            
            <% if (package.manifest.defaultConfig) { %>
              <hr>
              <h6>Default Configuration</h6>
              <pre class="bg-light p-2 rounded small"><%= JSON.stringify(package.manifest.defaultConfig, null, 2) %></pre>
              <button id="resetToDefault" class="btn btn-sm btn-outline-secondary">Reset to Default</button>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const configForm = document.getElementById('configForm');
      const configJson = document.getElementById('configJson');
      const resetButton = document.getElementById('resetToDefault');
      
      // Reset to default configuration
      if (resetButton) {
        resetButton.addEventListener('click', function() {
          const defaultConfig = <%- JSON.stringify(package.manifest.defaultConfig || {}) %>;
          configJson.value = JSON.stringify(defaultConfig, null, 2);
        });
      }
      
      // Form submission
      configForm.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        // Validate JSON
        try {
          const config = JSON.parse(configJson.value);
          configJson.classList.remove('is-invalid');
          
          // Send to API
          try {
            const response = await fetch(`/api/packages/<%= package.name %>/config`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify({ config })
            });
            
            if (response.ok) {
              // Redirect back to package details
              window.location.href = `/dashboard/packages/<%= package.name %>`;
            } else {
              const error = await response.json();
              alert(`Error: ${error.error}`);
            }
          } catch (error) {
            console.error('Error updating package config:', error);
            alert('Failed to update configuration. See console for details.');
          }
        } catch (error) {
          // Invalid JSON
          configJson.classList.add('is-invalid');
        }
      });
    });
  </script>
</body>
</html>
