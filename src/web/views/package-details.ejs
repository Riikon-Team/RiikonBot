<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= package.name %> - RiikonBot</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/navbar', { user: user }) %>
  
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1 class="mb-0"><%= package.name %></h1>
        <p class="text-muted">Version <%= package.version %></p>
      </div>
      <span class="badge <%= package.enabled ? 'bg-success' : 'bg-secondary' %> fs-6">
        <%= package.enabled ? 'Enabled' : 'Disabled' %>
      </span>
    </div>
    
    <div class="row">
      <div class="col-md-8">
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0">Description</h5>
          </div>
          <div class="card-body">
            <p><%= package.manifest.description || 'No description available.' %></p>
            <% if (package.manifest.author) { %>
              <p class="mb-0"><strong>Author:</strong> <%= package.manifest.author %></p>
            <% } %>
          </div>
        </div>
        
        <% if (user.isAdmin) { %>
          <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h5 class="mb-0">Configuration</h5>
              <a href="/dashboard/packages/<%= package.name %>/config" class="btn btn-sm btn-primary">
                Edit Configuration
              </a>
            </div>
            <div class="card-body">
              <pre class="bg-light p-3 rounded"><%= JSON.stringify(package.config, null, 2) %></pre>
            </div>
          </div>
        <% } %>
      </div>
      
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0">Package Status</h5>
          </div>
          <div class="card-body">
            <p><strong>Status:</strong> 
              <span class="badge <%= package.enabled ? 'bg-success' : 'bg-secondary' %>">
                <%= package.enabled ? 'Enabled' : 'Disabled' %>
              </span>
            </p>
            
            <% if (user.isAdmin) { %>
              <div class="d-grid gap-2 mt-3">
                <button class="btn btn-<%= package.enabled ? 'warning' : 'success' %> toggle-package" 
                       data-package-name="<%= package.name %>"
                       data-current-state="<%= package.enabled ? 'enabled' : 'disabled' %>">
                  <%= package.enabled ? 'Disable Package' : 'Enable Package' %>
                </button>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="mt-4">
      <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <% if (user.isAdmin) { %>
  <script>
    // Toggle package enable/disable functionality
    document.querySelectorAll('.toggle-package').forEach(button => {
      button.addEventListener('click', async function() {
        const packageName = this.dataset.packageName;
        const isCurrentlyEnabled = this.dataset.currentState === 'enabled';
        
        try {
          const response = await fetch(`/api/packages/${packageName}/toggle`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ enabled: !isCurrentlyEnabled })
          });
          
          if (response.ok) {
            // Reload the page to show updated status
            window.location.reload();
          } else {
            const error = await response.json();
            alert(`Error: ${error.error}`);
          }
        } catch (error) {
          console.error('Error toggling package:', error);
          alert('Failed to toggle package status. See console for details.');
        }
      });
    });
  </script>
  <% } %>
</body>
</html>
