<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel - RiikonBot</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/navbar', { user: user }) %>
  
  <div class="container mt-4">
    <h1>Admin Panel</h1>
    
    <div class="card mt-4">
      <div class="card-header">
        <h5 class="mb-0">Package Management</h5>
      </div>
      <div class="card-body">
        <% if (packages && packages.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Version</th>
                  <th>Author</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% packages.forEach(pkg => { %>
                  <tr data-package-name="<%= pkg.name %>">
                    <td><%= pkg.name %></td>
                    <td><%= pkg.description %></td>
                    <td><%= pkg.version %></td>
                    <td><%= pkg.author %></td>
                    <td>
                      <span class="badge <%= pkg.enabled ? 'bg-success' : 'bg-secondary' %>">
                        <%= pkg.enabled ? 'Enabled' : 'Disabled' %>
                      </span>
                    </td>
                    <td>
                      <div class="btn-group btn-group-sm">
                        <button class="btn btn-<%= pkg.enabled ? 'warning' : 'success' %> toggle-package">
                          <%= pkg.enabled ? 'Disable' : 'Enable' %>
                        </button>
                        <a href="/dashboard/packages/<%= pkg.name %>/config" class="btn btn-primary">Configure</a>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-center text-muted">No packages installed</p>
        <% } %>
      </div>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Toggle package enable/disable functionality
    document.querySelectorAll('.toggle-package').forEach(button => {
      button.addEventListener('click', async function() {
        const row = this.closest('tr');
        const packageName = row.dataset.packageName;
        const isCurrentlyEnabled = this.textContent.trim() === 'Disable';
        
        try {
          const response = await fetch(`/api/packages/${packageName}/toggle`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ enabled: !isCurrentlyEnabled })
          });
          
          if (response.ok) {
            // Update UI
            const data = await response.json();
            const statusBadge = row.querySelector('.badge');
            
            if (data.enabled) {
              statusBadge.classList.remove('bg-secondary');
              statusBadge.classList.add('bg-success');
              statusBadge.textContent = 'Enabled';
              this.textContent = 'Disable';
              this.classList.remove('btn-success');
              this.classList.add('btn-warning');
            } else {
              statusBadge.classList.remove('bg-success');
              statusBadge.classList.add('bg-secondary');
              statusBadge.textContent = 'Disabled';
              this.textContent = 'Enable';
              this.classList.remove('btn-warning');
              this.classList.add('btn-success');
            }
          } else {
            const error = await response.json();
            alert(`Error: ${error.error}`);
          }
        } catch (error) {
          console.error('Error toggling package:', error);
          alert('Failed to toggle package status. See console for details.');
        }
      });
    });
  </script>
</body>
</html>
