<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - RiikonBot</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/navbar', { user: user }) %>
  
  <div class="container mt-4">
    <h1>Dashboard</h1>
    
    <div class="row mt-4">
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0">Bot Status</h5>
          </div>
          <div class="card-body">
            <p><strong>Status:</strong> <span class="badge bg-success">Online</span></p>
            <p><strong>Uptime:</strong> <%= Math.floor(botStatus.uptime / 3600000) %>h <%= Math.floor((botStatus.uptime % 3600000) / 60000) %>m</p>
            <p><strong>Servers:</strong> <%= botStatus.serverCount %></p>
          </div>
        </div>
      </div>
      
      <div class="col-md-8">
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Installed Packages</h5>
            <% if (user.isAdmin) { %>
              <a href="/admin" class="btn btn-sm btn-primary">Manage Packages</a>
            <% } %>
          </div>
          <div class="card-body">
            <% if (packages && packages.length > 0) { %>
              <div class="list-group">
                <% packages.forEach(pkg => { %>
                  <a href="/dashboard/packages/<%= pkg.name %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <div>
                      <h6 class="mb-1"><%= pkg.name %></h6>
                      <p class="mb-1 text-muted small"><%= pkg.description %></p>
                    </div>
                    <span class="badge <%= pkg.enabled ? 'bg-success' : 'bg-secondary' %> rounded-pill">
                      <%= pkg.enabled ? 'Enabled' : 'Disabled' %>
                    </span>
                  </a>
                <% }); %>
              </div>
            <% } else { %>
              <p class="text-center text-muted">No packages installed</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
