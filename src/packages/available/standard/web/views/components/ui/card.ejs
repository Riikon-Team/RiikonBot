<div class="card <%= locals.extraClasses || '' %>">
  <% if (title) { %>
    <div class="card-header">
      <h5 class="mb-0"><%= title %></h5>
    </div>
  <% } %>
  <div class="card-body">
    <%- content %>
  </div>
  <% if (locals.footer) { %>
    <div class="card-footer">
      <%- footer %>
    </div>
  <% } %>
</div>
